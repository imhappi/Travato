<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:orientation="vertical">

    <View
        android:id="@+id/local_tour_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/local_tour_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/colorPrimaryDark" />

        <TextView
            android:id="@+id/local_tours_title"
            android:paddingLeft="5dp"
            android:text="placeholder"
            android:textSize="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/local_tours_guide_name"
            android:paddingLeft="5dp"
            android:text="Firstname Lastname"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/local_tours_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BLABLA $2000"
            android:textSize="13dp"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/local_tours_date"
            android:textSize="14dp"
            android:text="MOCK DATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/local_tours_capacity"
            android:text="MOCK DATA 3/5"
            android:textSize="13dp"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"/>
    </RelativeLayout>

    </View>


</LinearLayout>