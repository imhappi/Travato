<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:showDividers="middle|end">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/settings_edit_profile_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:text="Edit Profile"
            android:id="@+id/settings_edit_profile_text"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/settings_switch_traveller_local_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Switch to Traveller/Local (should change dynamically)"
            android:id="@+id/settings_switch_traveller_local_button_text"/>

    </LinearLayout>


</LinearLayout>