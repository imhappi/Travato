<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/choose_traveller_button"
        android:layout_width="wrap_content"
        android:padding="20dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@color/com_facebook_messenger_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:text="I am a Traveller"/>
    </RelativeLayout>

    <View
        android:id="@+id/choose_traveller_local_blank_space"
        android:layout_above="@+id/choose_traveller_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/choose_traveller_local_blank_space"
        android:id="@+id/choose_local_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:padding="20dp"
        android:background="@color/com_facebook_messenger_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="I am a Local"/>

    </RelativeLayout>

</RelativeLayout>